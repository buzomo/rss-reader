{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.py",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE",
                "OPTIONS"
            ]
        },
        {
            "src": "/static/(.*)",
            "dest": "static/$1"
        }
    ],
    "env": {
        "DATABASE_URL": "@neon-database-url",
        "SECRET_KEY": "@secret-key"
    },
    "regions": [
        "tok1"
    ]
}